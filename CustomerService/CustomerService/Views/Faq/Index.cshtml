@model List<CustomerService.ViewModel.FAQViewModel>

<div class="">
    <!-- CATEGORIES -->
    <div class="row m-0 bg-dark p-2">
        <div class="col-sm-2 mt-3">
            <h6 style="font-weight: bold;color: white;">SHORT CUTS WORDS</h6>
        </div>
        
            <div class="col-sm-3">
                
            </div>

        <div class="col-sm-4 ">
            <div class="row mt-1 form-inline ">
                <form method="get" action="@Url.Action("index", "faq")">
                    <input type="text" placeholder="SEARCH FOR QUESTION ? ..." class="form-control p-2 mr-2" name="search" id="search" />
                    <button type="submit" class="btn btn-warning p-2"><i class="fa fa-search"></i> SEARCH</button>
                </form>
            </div>

        </div>
    </div>
    <!-- END CATEGORIES -->
    <div class="row m-0 p-0">


        <div class="col-sm-12 quest">
            <!-- FAQ HEADER -->
            <div class="bg-white card-header my-3 ">
                <div class="container">
                    <h6 style="font-weight: bold;"><i class="fas fa-question-circle fa-lg mr-2"></i>FREQUENTLY ASKED QUESTIONS</h6>
                </div>
            </div>
            <!--END FAQ HEADER -->
            <!-- FAQ ACCORDION -->
            <div id="accordion">
                @foreach (var item in Model)
                {

                    <!-- QUESTION CARD-->
                    <div class="bg-white mb-4" id="quest">
                        <!-- QUESTION -->
                        <div>

                            <div class="card-header bg-white">
                                <div>
                                    <h5 class="mb-0">
                                        <button data-topass="@item.Qid" class="btn btn-xl btn-block question" style="background-color: white;text-align: left;color: #989FA5;"
                                                role="button">
                                            <div class="d-flex">
                                                <h6 class="mr-auto"><i class="far fa-question-circle mr-2 fa-lg"></i>@item.QName</h6>
                                                <h6 class=""><i class="fas fa-chevron-circle-down fa-lg"></i></h6>
                                            </div>
                                        </button>
                                    </h5>

                                </div>
                            </div>
                        </div>
                        <!--END QUESTION -->
                        <!-- ANSWER -->

                        <div class="collapse" id="@("a"+item.Qid)">
                            <ul class=" container list-unstyled">
                                @foreach (var answer in item.Answers)
                                {
                                    var text= answer.Replace(".", "<br><i style='color: #E0A800;' class='fas fa-angle-double-right fa-lg mr-1'></i>");
                                <li class="py-2"><i style="color: #E0A800;" class="fas fa-angle-double-right fa-lg mr-1"></i>@Html.Raw(HttpUtility.HtmlDecode(text))</li>
                                }
                            </ul>
                        </div>
                        <!--END ANSWER -->

                    </div>
                    <!--END QUESTION CARD -->
                    <!-- end one branch -->
                }



                <!--END FAQ ACCORDION -->

            </div>
        </div>
    </div>
    <script>

    </script>
    @Html.Partial("_AJAXPartialView")

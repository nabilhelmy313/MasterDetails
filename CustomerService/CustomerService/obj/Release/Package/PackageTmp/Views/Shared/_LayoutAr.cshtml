<!DOCTYPE html>

<html dir="rtl">
<head>
    <meta name="viewport" content="width=device-width" />
    <style>
        .leftside {
            background-color: #F2F2F2;
            color: #6A737C;
            display: inline-block;
            vertical-align: top;
            min-height: 100%;
            overflow: auto;
        }

        .cont li:hover {
            background-color: white;
        }
        /* middle */
        .middle {
            background-color: #f8f8f8;
            min-height: 100%;
        }

            .middle li:hover {
                background-color: white;
                border-radius: 10px;
            }

        /* end middle */
        /* right side */
        .rightside {
            background-color: #fbfbfb;
            min-height: 100%;
        }

        .img-box {
            width: 100px;
            height: 100px;
            overflow: hidden;
            border-radius: 15px;
            box-shadow: rgba(50, 50, 93, 0.25) 0px 13px 27px -5px, rgba(0, 0, 0, 0.3) 0px 8px 16px -8px;
        }

        .info h4 {
            color: #989FA5;
            margin-left: 10px;
        }

        .img-box img {
            object-fit: cover;
            width: 100%;
            height: 100%;
        }
        /* end right side */



    </style>
    <script src='https://kit.fontawesome.com/a076d05399.js'></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    @Scripts.Render("~/bundles/modernizr")
    <title>@ViewBag.Title</title>
</head>
<body>
    <!-- nav bar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">LOWCALORIES</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="~/Faq/IndexAr">الأسئلة المتداولة</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="~/CustServ/IndexAr">معلومات الفروع</a>
                </li>
            </ul>
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="~/Faq/Index">English<i class="fas fa-globe mr-1"></i></a>
                </li>
            </ul>
        </div>
    </nav>
    <!--end nav bar -->
    <div>
        @RenderBody()
    </div>
</body>
</html>
